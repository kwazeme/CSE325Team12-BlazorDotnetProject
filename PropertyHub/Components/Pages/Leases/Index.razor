@page "/leases"
@inject ApplicationDbContext _context
@inject NavigationManager Navigation
@inject UserManager<ApplicationUser> UserManager
@using PropertyHub.Shared
@attribute [Authorize]

<h3>Leases</h3>

<button class="btn btn-primary mb-2" @onclick='() => Navigation.NavigateTo("/leases/create")'>Add Lease</button>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Listing</th>
            <th>Tenant</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lease in leases)
        {
            <tr>
                <td>@lease.Listing?.Address</td>
                <td>@lease.Tenant?.Name</td>
                <td>@lease.StartDate.ToShortDateString()</td>
                <td>@lease.EndDate.ToShortDateString()</td>
                <td>
                    <button class="btn btn-info" @onclick='() => Navigation.NavigateTo($"/leases/details/{lease.Id}")'>View</button>
                    <button class="btn btn-warning" @onclick='() => Navigation.NavigateTo($"/leases/edit/{lease.Id}")'>Edit</button>
                    <button class="btn btn-danger" @onclick="() => ShowDeleteModal(lease.Id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<DeleteDialog @bind-Show="showDialog" OnConfirm="@DeleteLease"
              Title="Delete Lease" Message="Are you sure you want to delete this lease?" />

@code {
    [CascadingParameter]
    private Task<AuthenticationState> AuthenticationStateTask { get; set; } = default!;

    private List<Lease> leases = new();
    private bool showDialog = false;
    private int selectedLeaseId;

    protected override async Task OnInitializedAsync()
    {
        var userId = await GetUserIdAsync();
        leases = await _context.Leases
            .Include(l => l.Listing)
            .Include(l => l.Tenant)
            .Where(l => l.OwnerId == userId)
            .ToListAsync();
    }

    private void ShowDeleteModal(int id)
    {
        selectedLeaseId = id;
        showDialog = true;
    }

    private async Task DeleteLease()
    {
        var userId = await GetUserIdAsync();
        var lease = await _context.Leases
            .FirstOrDefaultAsync(l => l.Id == selectedLeaseId && l.OwnerId == userId);
        if (lease != null)
        {
            _context.Leases.Remove(lease);
            await _context.SaveChangesAsync();
            leases.RemoveAll(l => l.Id == selectedLeaseId);
        }
    }

    private async Task<string?> GetUserIdAsync()
    {
        var authState = await AuthenticationStateTask;
        return UserManager.GetUserId(authState.User);
    }
}
